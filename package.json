{
  "name": "pluto-office",
  "productName": "pluto-office",
  "version": "1.0.0",
  "main": "public/electron.js",
  "author": "Pluto Dev Team <lahiri.devs@gmail.com>",
  "email": "lahiri.dev@gmail.com",
  "description": "Virtual Office App for Teams",
  "private": true,
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@reactivex/rxjs": "^6.5.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "animate.css": "^3.7.0",
    "axios": "^0.19.2",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "electron-disable-minimize": "^2.0.2",
    "electron-is-dev": "^1.2.0",
    "electron-titlebar": "0.0.3",
    "env-cmd": "^10.1.0",
    "firebase": "^7.14.4",
    "lodash": "^4.17.15",
    "overmind": "^23.1.0",
    "overmind-react": "^24.1.0",
    "qs": "^6.9.4",
    "query-string": "^6.12.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-remove-scroll-bar": "^2.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-show-more-list": "^0.5.2",
    "react-spinners": "^0.8.3",
    "react-toastify": "^6.0.4",
    "react-transition-group": "^4.4.1",
    "rxjs": "^6.5.5",
    "socket.io-client": "^2.3.0",
    "tailwindcss": "^1.4.6",
    "cross-var": "1.1.0",
    "dotenv-cli": "3.0.0",
    "url": "^0.11.0"
  },
  "homepage": "./",
  "build": {
    "appId": "com.pluto.office",
    "compression": "normal",
    "productName": "pluto-office-app",
    "copyright": "MIT",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets/**/*",
      "output": "dist"
    },
    "mac": {
      "icon": "./assets/macos/logo.icns",
      "category": "public.app-category.business",
      "entitlements": "./assets/entitlements.mac.plist",
      "type": "development",
      "target": [
        "dmg"
      ],
      "publish": {
        "provider": "github"
      }
    },
    "dmg": {
      "internetEnabled": "true",
      "sign": "false",
      "title": "${productName}_mac_${version}",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./assets/windows/logo.ico",
      "publish": {
        "provider": "github"
      }
    },
    "linux": {
      "icon": "./assets/logo.png",
      "target": [
        "deb",
        "snap",
        "rpm"
      ],
      "description": "Virtual Office App for Teams",
      "category": "office",
      "publish": {
        "provider": "github"
      }
    }
  },
  "scripts": {
    "build:style": "tailwind build src/styles/index.css -o src/styles/tailwind.css",
    "production": "npm run build:style && cross-env BROWSER=none env-cmd -f .env react-scripts start",
    "local": "npm run build:style && cross-env BROWSER=none env-cmd -f .env.local react-scripts start",
    "build": "cross-env NODE_ENV=production && npm run build:style && cross-env BROWSER=none env-cmd -f .env react-scripts build",
    "test": "env-cmd -f .env react-scripts test",
    "eject": "env-cmd -f .env react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "setup": "npm install && npm run build",
    "electron-prod": "cross-env NODE_ENV=production env-cmd -f .env nodemon --exec electron .",
    "electron-local": "cross-env NODE_ENV=dev env-cmd -f .env.local nodemon --exec electron .",
    "prod": "concurrently --kill-others \"npm run production\" \"cross-env NODE_ENV=production dotenv -e .env -- cross-var wait-on %ELECTRON_START_URL% && npm run electron-prod \"",
    "start": "concurrently --kill-others \"npm run local\" \"cross-env NODE_ENV=dev dotenv -e .env.local -- cross-var wait-on %ELECTRON_START_URL% && npm run electron-local \"",
    "mac-release": "cross-env NODE_ENV=production electron-builder build --mac -c.extraMetadata.main=build/electron.js --publish=always",
    "linux-release": "cross-env NODE_ENV=production electron-builder build --linux -c.extraMetadata.main=build/electron.js --publish=always",
    "win-release": "cross-env NODE_ENV=production electron-builder build --win -c.extraMetadata.main=build/electron.js --publish=always",
    "release": "cross-env NODE_ENV=production electron-builder build --mac -c.extraMetadata.main=build/electron.js --publish=always"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "concurrently": "^5.2.0",
    "electron": "^8.3.0",
    "electron-builder": "^22.6.1",
    "electron-packager": "^14.2.1",
    "electron-react-devtools": "^0.5.3",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.4",
    "postcss-cli": "^7.1.1",
    "wait-on": "^4.0.2"
  }
}
